<!DOCTYPE html>
<html lang="en">
<!-- Include header -->
<%- include('layouts/header'); -%>

  <body>
    <!-- Include opaque navbar -->
    <%- include('layouts/navbar-opaque'); -%>

      <div class="container">
        <!-- Signup container with background -->
        <div id="neoBgn" class="p-4 signup-container">
          <!-- Header for edit password page -->
          <h1>Edit Password</h1>

          <% if (editPassword) { %>
            <!-- Form to edit the password -->
            <form action="/update-password" method="post">
              <!-- Hidden field to store the username -->
              <input type="hidden" name="username" value="<%= user.name %>" />

              <!-- Label and input field for new password -->
              <label for="newPassword">New Password:</label>
              <input class="neoInput" type="password" name="newPassword" required />
              <br><br>

              <!-- Submit button to update password -->
              <button class="submitBtn blue-to-purple" type="submit">Update Password</button>
            </form>
            <% } else { %>
              <!-- Display a success message or redirect as needed -->
              <p>Password recovery for <%= user.name %> is complete!</p>
              <% } %>
        </div>
      </div>
  </body>

</html>