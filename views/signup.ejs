<!DOCTYPE html>
<html lang="en">
<!-- Include header -->
<%- include('layouts/header'); -%>

    <body>
        <!-- Include opaque navbar -->
        <%- include('layouts/navbar-opaque'); -%>

            <div class="container">
                <!-- Signup container with background -->
                <div id="neoBgn" class="p-4 signup-container">
                    <!-- Signup page header -->
                    <h1> Signup</h1>

                    <!-- Form for user signup -->
                    <form action="/signup" method="post">
                        <!-- Name input field -->
                        <input class="neoInput" type="text" name="name" placeholder="Name" required />

                        <!-- Password input field -->
                        <input class="neoInput" type="password" name="password" placeholder="Password" required />

                        <!-- Security Question input field -->
                        <input class="neoInput" type="text" name="security" placeholder="Security Question" required />

                        <!-- Answer input field -->
                        <input class="neoInput" type="text" name="answer" placeholder="Answer" required />

                        <!-- Redirect link to login page for existing users -->
                        <div id="redirectLink">
                            <p>Already have an account? <a href="/login">Log in</a></p>
                        </div>

                        <!-- Submit button for form submission -->
                        <button class="submitBtn blue-to-purple" type="submit">Submit</button>
                    </form>
                </div>
            </div>

            <!-- Add some space after the container -->
            <div style="height: 100px;"> </div>
    </body>

</html>